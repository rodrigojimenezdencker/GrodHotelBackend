@model IEnumerable<GrodHotelBackend.Models.Bookings>

@{
    ViewData["Title"] = "Bookings";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                DNI Client
            </th>
            <th>
                Room
            </th>
            <th>
                Entry Date
            </th>
            <th>
                Leaving Date
            </th>
            <th>
                Total Price
            </th>
            <th>
                Adult Numbers
            </th>
            <th>
                Minor Numbers
            </th>
            <th>
                Confirmation Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Clients.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rooms.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeavingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdultNumbers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinorNumbers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmationDate)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>