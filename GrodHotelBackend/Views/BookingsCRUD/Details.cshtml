@model GrodHotelBackend.Models.Bookings

@{
    ViewData["Title"] = "Client details";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<p class="display-4">@ViewData["Title"]</p>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Client
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clients.Dni)
        </dd>
        <dt class = "col-sm-2">
            Room
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rooms.Id)
        </dd>
        <dt class = "col-sm-2">
            Entry Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EntryDate)
        </dd>
        <dt class = "col-sm-2">
            Leaving Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeavingDate)
        </dd>
        <dt class = "col-sm-2">
            Total Price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class = "col-sm-2">
            Adult Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdultNumbers)
        </dd>
        <dt class = "col-sm-2">
            Minor Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinorNumbers)
        </dd>
        <dt class = "col-sm-2">
            Confirmation Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConfirmationDate)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
