<!DOCTYPE html>
    <html lang="en" data-page="@ViewBag.PageName" class="page-@ViewBag.PageName">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>@ViewBag.Title | GROD Hotel</title>
        <link rel="shortcut icon" href="~/Content/img/favicon-32x32.png" type="image/png" />
        <link rel="stylesheet" href="~/Content/css/style-back.css">
        <link rel="stylesheet" href="~/Assets/shared/css/bootstrap.css" />
    </head>
    <body>
        <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
            <a asp-controller="Dashboard" asp-action="Index" class="navbar-brand col-sm-3 col-md-2 mr-0">GROD Hotel Dashboard</a>
        </nav>

        <div class="container-fluid">
            <div class="main_content row">
                <nav class="col-md-2 mt-3 col-sm-12 d-sm-block bg-light sidebar">
                    <div class="sidebar-sticky">
                        <ul class="nav flex-md-column">
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="Dashboard" asp-action="Index">
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="BookingsDashboard" asp-action="Index">
                                    Bookings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="ClientsDashboard" asp-action="Index">
                                    Clients
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="ComoditiesDashboard" asp-action="Index">
                                    Comodities
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="HotelDashboard" asp-action="Index">
                                    Hotels
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="HotelsChainDashboard" asp-action="Index">
                                    Hotels Chain
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="RoomsDashboard" asp-action="Index">
                                    Rooms
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="ServicesDashboard" asp-action="Index">
                                    Services
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="CountriesDashboard" asp-action="Index">
                                    Countries
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-controller="CitiesDashboard" asp-action="Index">
                                    Cities
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>

                <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-3">
                    @RenderBody()
                </main>
            </div>
        </div>
        <script src="~/Content/js/script-back.min.js"></script>
        <script src="~/Assets/shared/js/jquery.js"></script>
        <script src="~/Assets/page/dashboard/js/script.js"></script>
        <script src="~/Assets/shared/js/sweetalert2.all.js"></script>
        <script src="~/Assets/shared/js/moment.min.js"></script>
    </body>
</html>