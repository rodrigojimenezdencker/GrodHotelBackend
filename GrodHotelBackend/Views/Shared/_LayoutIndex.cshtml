<!DOCTYPE html>
<html lang="en" data-page="@ViewBag.PageName" class="page-@ViewBag.PageName">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>@ViewBag.Title - A Luxury Hotel</title>
    <link rel="shortcut icon" href="~/Content/img/favicon-32x32.png" type="image/png" />
    <link rel="stylesheet" href="~/Content/css/style.min.css">
</head>

<body>
    <header>
        <nav>
            <input type="checkbox" id="nav_check" />
            <!-- Hamburger menu on mobile version -->
            <div id="mobile_nav_button">
                <label aria-label="To ggle main menu" for="nav_check">
                    <!-- Lines of hamburger icon -->
                    &Congruent;
                </label>
            </div>
            <ul id="nav_links">
                <li><a href="Home">Home</a></li>
                <li><a href="Search">Search</a></li>
                <li><a href="About">About</a></li>
                <li><a href="Contact">Contact</a></li>
                <li><a href="Dashboard">Dashboard</a></li>
            </ul>
        </nav>
        <img id="img_logo" src="~/Content/img/logo-350px.png" alt="GROD Hotel" />

        <video width="100" autoplay loop muted>
            <source src="~/Content/video/hotel.mp4" type="video/mp4">
        </video>
        <form action="Search" data-widget="index_form" method="POST">
            <div class="input_group_container">
                <fieldset>
                    <label for="entry_date">Entry date</label>
                    <input type="date" data-hook="entry_date" id="entry_date" required />
                    <img src="~/Content/svg/calendar.svg" class="form_icon" alt="Entry Date" />
                </fieldset>
                <fieldset>
                    <label for="leaving_date">Leaving date</label>
                    <input type="date" data-hook="leaving_date" id="leaving_date" required />
                    <img src="~/Content/svg/calendar.svg" class="form_icon" alt="Leaving Date" />
                </fieldset>
            </div>
            <div class="input_group_container">
                <fieldset>
                    <label for="numberAdults">Number of adults</label>
                    <input id="numberAdults" type="number" data-hook="numberAdults" min="1" max="10" name="numberAdults"
                           value="2" />
                    <img src="~/Content/svg/man.svg" class="form_icon" alt="Number of Adults" />
                </fieldset>
                <fieldset>
                    <label for="numberMinors">Number of minors</label>
                    <input id="numberMinors" type="number" data-hook="numberMinors" min="0" max="10" name="numberMinors"
                           value="0">
                    <img src="~/Content/svg/child.svg" class="form_icon" alt="Number of Minors" />
                </fieldset>
            </div>
            <fieldset>
                <label for="city">City</label>
                <div class="select">
                    <select data-hook="city" id="city" required>
                        <option value="" selected disabled>Select a city</option>
                        <option value="barcelona">Barcelona</option>
                        <option value="madrid">Madrid</option>
                        <option value="longon">London</option>
                        <option value="roma">Roma</option>
                        <option value="qatar">Qatar</option>
                        <option value="tokio">Tokio</option>
                    </select>
                    <div class="select_arrow"></div>
                </div>
            </fieldset>
            <button class="send_button">Send</button>
        </form>
    </header>

    @RenderBody()

    <img src="~/Content/svg/navigate-up-arrow.svg" data-widget="scroll_to_top" class="arrow_up" />

    <footer>
        <div class="cookies_warning" data-widget="cookies_warning">
            <p>
                This site uses cookies to personalise content and adverts, to provide social media features and to
                analyse traffic. <a href="CookieUsage">More info</a>.
            </p>
            <div>
                <button data-hook="accept_cookie" class="send_button">Accept cookies</button>
                <button data-hook="reject_cookie" class="send_button">Decline cookies</button>
            </div>
        </div>

        <div class="newsletter_form_container">
            <form data-widget="newsletter-form" action="ThanksForSubscribing" method="POST">
                <h3>Subscribe to our Newsletter!</h3>
                <div class="newsletter_input_container">
                    <input placeholder="Your e-mail" id="email" type="email" maxlength="50" name="email" required />
                    <img src="~/Content/svg/mail.svg" class="form_icon" alt="email" />
                    <button class="send_button">Subscribe!</button>
                </div>
            </form>
        </div>

        <div class="footer_container">
            <div>
                <p>
                    <a href="https://validator.w3.org">
                        <img src="~/Content/img/valid-html5.png" alt="HTML5 Válido!" />
                    </a>
                    <a href="http://jigsaw.w3.org/css-validator/check/referer">
                        <img src="~/Content/img/valid-css.gif" alt="¡CSS Válido!" />
                    </a>
                </p>
                <p>© 2020 GROD Hotel</p>
            </div>
            <div class="footer_links">
                <h3>Useful Links</h3>
                <ul>
                    <li>
                        <a href="CookieUsage">Cookie Usage</a>
                    </li>
                    <li>
                        <a href="PersonalDataUsage">Personal Data Usage</a>
                    </li>
                </ul>
            </div>
            <div>
                <h3>Follow Us</h3>
                <ul id="social_icon_list">
                    <li>
                        <a href="#">
                            <img src="~/Content/svg/facebook.svg" class="footer_icon" alt="facebook" />
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <img src="~/Content/svg/twitter.svg" class="footer_icon" alt="twitter" />
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <img src="~/Content/svg/instagram.svg" class="footer_icon" alt="instagram" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/Content/js/script.min.js"></script>
</body>

</html>