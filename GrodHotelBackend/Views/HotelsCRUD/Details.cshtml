@model GrodHotelBackend.Models.Hotels

@{
    ViewData["Title"] = "Hotel details";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<p class="display-4">@ViewData["Title"]</p>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cities.Name)
        </dd>
        <dt class="col-sm-2">
            Hotel Chain
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HotelsChain.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trending)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trending)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Availability)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Availability)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SmallImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SmallImage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slug)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rooms)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var room in Model.Rooms)
                {
                    <li>
                        <a asp-controller="RoomsCRUD" asp-action="Details" asp-route-id="@room.Id">@room.Name</a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>