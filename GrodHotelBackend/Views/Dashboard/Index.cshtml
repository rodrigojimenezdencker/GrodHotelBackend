@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h1 class="display-4">@ViewData["Title"]</h1>
<hr />
<p class="alert alert-danger">This page is designed to edit the GROD Hotel page. Please, if you are not an authorized user, leave this page.</p>
<div class="d-flex flex-column">
    <div class="row">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Bookings</h5>
                    <a asp-controller="BookingsCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Clients</h5>
                    <a asp-controller="ClientsCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Comodities</h5>
                    <a asp-controller="ComoditiesCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Hotels</h5>
                    <a asp-controller="HotelsCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Hotels Chain</h5>
                    <a asp-controller="HotelsChainCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Rooms</h5>
                    <a asp-controller="RoomsCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Services</h5>
                    <a asp-controller="ServicesCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Countries</h5>
                    <a asp-controller="CountriesCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body d-flex justify-content-between">
                    <h5 class="card-title">Cities</h5>
                    <a asp-controller="CitiesCRUD" asp-action="Index" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
    </div>
</div>