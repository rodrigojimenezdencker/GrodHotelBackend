@model GrodHotelBackend.Controllers.HotelController.ViewModel

@{
    ViewData["Title"] = "HotelList";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}

<h1>HotelList</h1>

<div>
    <h4>Hotels</h4>
    <hr />
    <div style="display: flex; justify-content: space-between; width: 100vw">
        @foreach (var hotel in Model.Hotels)
        {
            <div style="width: 300px; height: 300px; background-color: gray">
                @hotel.Name
            </div>
        }

        @foreach (var client in Model.Clients)
        {
            <div style="width: 300px; height: 300px; background-color: gray">
                @client.Comments
                <img src="@client.Image" alt="@client.Name" />
            </div>
        }
    </div>
</div>